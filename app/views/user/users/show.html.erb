<div>
    <%= image_tag @user.get_profile_image(100,100), alt: "hoge" %>
    <h5><%= @user.name %></h5>
        <p> <% if @user == current_user && @user.email != "guest@example.com" %>
                <%= link_to "プロフィール編集", edit_user_path(@user) %>
            <% end %>
        </p>
</div>
<div>
    <% if @user == current_user && @user.email != "guest@example.com" %>
        <%= link_to new_book_path do %>
            新規投稿
        <% end %> 
    <% end %>
</div>
<table>
    <tbody>
        <tr>
            <% @books.each do |book| %>
                <td><%= image_tag book.get_image(100,100), alt: "hoge" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.user.name %></td>
            <% end %>
        </tr>
    </tbody>
</table>
<% unless @user.guest_user? %>
    <%= link_to "退会する", user_path(@user), method: :delete %>
<% end %>    