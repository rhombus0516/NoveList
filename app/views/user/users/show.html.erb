<div>
    <%= image_tag @user.get_profile_image(100,100), alt: "hoge" %>
    <h5><%= @user.name %></h5>
        <p> <% if @user == current_user && @user.email != "guest@example.com" %>
                <%= link_to "プロフィール編集", edit_user_path(@user) %>
            <% end %>
        </p>
        <p>
            <% if user_signed_in? %>
                <% if current_user.following?(@user) %>
                    <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
                <% else %>
                    <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
                <% end %>
            <% end %>
        </p>
</div>
<div>
    <h6>フォロー</h6>
    <%= link_to follows_user_path do %>
        <%= @user.followers.count %>
    <% end %>
</div>
<div>
    <h6>フォロワー</h6>
    <%= link_to followers_user_path do %>
        <%= @user.followeds.count %>
    <% end %>    
</div>
<div>
    <% if @user == current_user && @user.email != "guest@example.com" %>
        <%= link_to new_book_path do %>
            新規投稿
        <% end %> 
    <% end %>
</div>
<table>
    <tbody>
        <tr>
            <%= render 'user/books/index', book: @book %> 
        </tr>
    </tbody>
</table>

<% unless @user.guest_user? %>
    <%= link_to "退会する", user_path(@user), method: :delete %>
<% end %>
   