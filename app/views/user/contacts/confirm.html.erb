<div class="container mt-2 mb-2">
  <div class="row">
    <div class="col-2"></div>
      <div class="col-8">
        <table>
          <tbody>
            <tr>
              <td class="text-center" style="width: 30%;">お名前</td>
              <td><%= @contact.name %></td>
            </tr>
            <tr>
              <td class="text-center">メールアドレス</td>
              <td style="white-space: pre-wrap;"><%= @contact.email %></td>
            </tr>
            <tr>
              <td class="text-center">メッセージ</td>
              <td style="white-space: pre-wrap;"><%= @contact.message %></td>
            </tr>
          </tbody>
        </table>
        <%= form_with(model: @contact, url: contacts_path) do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '送信' %></div>
        <% end %>
        <%= form_with(model: @contact, url: back_path) do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '入力画面に戻る' %></div>
        <% end %>
      </div>
    <div class="col-2"></div>
  </div>
</div>