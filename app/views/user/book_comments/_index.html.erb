<table>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image(50,50) %>
        <% end %>
      </td>
      <td>
        <%= link_to user_path(book_comment.user),class: "text-dark" do %>
          <%= book_comment.user.name %>
        <% end %>
      </td>
    </tr>  
    <tr>
      <td><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "削除", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% elsif admin_signed_in? %>
          <%= link_to "削除", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>