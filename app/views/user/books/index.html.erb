<table>
    <tbody>
        <tr>
            <% @books.each do |book| %>
                <td><%= image_tag book.get_image(100,100) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.user.name %></td>
                <td><%= render "user/favorites/btn", book: book %></td>
                <td>コメント数： <%= book.book_comments.count %></td>
            <% end %>
        </tr>
    </tbody>
</table>