<table>
    <tbody>
        <tr>
            <td><%= image_tag @book.get_image(100,100) %></td>
            <td><%= @book.title %></td>
            <td><%= link_to user_path(@user) do %>
                <%= @user.name %>
                <% end %>
            </td>
        </tr>
        <tr>
            <td><%= @book.body %></td>
        </tr>
        <% @book.tags.each do |tag| %>
            <td><%= tag.name %></td>
        <% end %>
        <tr>
            <td id="favorite_buttons_<%= @book.id %>">
                 <%= render "user/favorites/btn", book: @book %>
            </td>
        </tr>
        <tr>
            <td id="comment_count">
                <%= render "user/book_comments/count", book: @book %>
            </td>
        </tr>
        <tr>
            <td><%= render "user/book_comments/form", book: @book, book_comment: @book_comment %></td>
            <td id="comment_index">
                <%= render "user/book_comments/index", book: @book %>
            </td>
        </tr>
        <tr><!-- 編集ボタン -->
             <% if @book.user == current_user %>
                <td><%= link_to "編集する", edit_book_path(@book.id) %></td>
            <% end %>
        </tr>
    </tbody>
</table>