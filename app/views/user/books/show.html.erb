<table>
    <thead>
        <%= image_tag @book.get_image(100,100) %>
        <%= @book.title %>
    </thead>
    <tbody>
        <tr>
            <td>
                <%= @book.body %>
            </td>
        </tr>
        <tr>
            <td><%= render "user/book_comments/form", book: @book, book_comment: @book_comment %></td>
            <td><%= render "user/book_comments/index", book: @book %></td>
        </tr>
        <tr><!-- 編集ボタン -->
             <% if @book.user == current_user %>
                <td><%= link_to "編集する", edit_book_path(@book.id) %></td>
            <% end %>
        </tr>
    </tbody>
</table>    