<div class="container">
  <div class="row">
    <table class="table table-striped">
        <tbody>
            <tr>
                <% @books.each do |book| %>
                    <tr>
                        <td><%= link_to user_path(book.user.id) do %>
                            <%= image_tag book.get_image(100,100) %>
                            <% end %></td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.user.name %></td>
                        <% if user_signed_in? %>
                            <td id= "favorite_buttons_<%= book.id %>">
                                <%= render "user/favorites/btn", book: book %></td>
                        <% end %>
                        <% if user_signed_in? %>
                            <td id="comment_count">
                                <%= render "user/book_comments/count", book: book %>
                            </td>
                        <% end %>
                    </tr>
                <% end %>
        </tbody>
    </table>
  </div>
</div>