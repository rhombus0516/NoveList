<div class="container mt-3 mb-3">
  <div class="row">
      <div><%= flash[:notice] %></div>
    <table class="table table-striped">
        <tbody>
            <tr>
                <% @books.each do |book| %>
                    <tr>
                        <td><%= link_to book_path(book.id) do %>
                            <%= image_tag book.get_image(100,100) %>
                            <% end %></td>
                        <td><%= link_to book.title, book_path(book.id), class: "text-dark" %></td>
                        <td><%= link_to book.user.name, user_path(book.user.id),  class: "text-dark" %></td>
                        <td><span class="count" id="count_title">0文字</span></td>
                        <% if user_signed_in? %>
                            <td id= "favorite_buttons_<%= book.id %>">
                                <%= render "user/favorites/btn", book: book %></td>
                            <td id="comment_count">
                                <%= render "user/book_comments/count", book: book %>
                            </td>
                        <% end %>
                    </tr>
                <% end %>
        </tbody>
    </table>
  </div>
</div>