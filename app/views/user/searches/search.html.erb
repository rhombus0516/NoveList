<div class="container">
    <div class="row">
        <table class="table  table-hover table-inverse">
            <% if @range == "User" %>
                <h3 class="card-title mb-4 mt-1">ユーザー検索結果</h3>
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= link_to user_path(user) do %>
                                    <%= image_tag user.get_profile_image(100,100), alt: "hoge" %>
                                <% end %></td>
                            <td><%= user.name %></td>
                        </tr>
                    <% end %>
                </tbody>
            <% else %>
                <h3 class="card-title mb-4 mt-1">本の検索結果</h3>
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th></th>
                        <th></th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= image_tag book.get_image(100,100) %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.user.name %></td>
                                <% if user_signed_in? %>
                                    <td><%= render "user/favorites/btn", book: book %></td>
                                    <td>コメント数： <%= book.book_comments.count %></td>
                                <% end %>
                        </tr>
                    <% end %>
                </tbody>
            <% end %>
        </table>
    </div>
</div>